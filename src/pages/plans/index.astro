---
import LayoutPlans from "@layouts/LayoutPlans.astro";
---

<LayoutPlans title="SoundHead - Planes">
  <section>
    <div class="cards__inner">
      <div class="cards__card card">
        <p class="card__heading">Plan Gratis</p>
        <p class="card__price">$0/Mes</p>
        <ul class="card_bullets flow" role="list">
          <li>Acceso al contenido</li>
          <li>Compartir tu contenido</li>
        </ul>
      </div>
      <div class="overlay cards__inner"></div>
    </div>
  </section>
  <section>
    <div class="cards__inner">
      <div class="cards__card card">
        <p class="card__heading">Plan Primium</p>
        <p class="card__price">$9.99/Mes</p>
        <ul class="card_bullets flow" role="list">
          <li>Acceso al contenido</li>
          <li>Compartir tu contenido</li>
          <li>Descargar contenido</li>
          <li>No publicida</li>
        </ul>
        <a class="card__cta cta" href="#basic">Adquirir</a>
      </div>
      <div class="overlay cards__inner"></div>
    </div>
  </section>
</LayoutPlans>
